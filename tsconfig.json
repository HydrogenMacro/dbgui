{
    "compilerOptions": {
        "target": "ES2022",
        "module": "esnext",
        "lib": ["DOM", "ES2022"],
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        "outDir": "dist",
        "declaration": true,
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}